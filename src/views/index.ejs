<%- include('includes/head') %> <%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center mt-4">Agenda</h1>
      <p class="text-center lead">Seus contatos estão abaixo</p>


<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center mt-4">Contato</h1>
      <p class="text-center lead">Crie ou edite seu contato abaixo.</p>

      <%- include('includes/messages') %>

      <% if(contato._id) { %>
      <form action="/contato/edit/<%= contato._id %>" method="POST">
      <% } else { %>
      <form action="/contato/register" method="POST">
      <% } %>
        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
        <div class="form-group">
          <label>Nome</label>
          <input value="<%= contato.nome %>" type="text" class="form-control" name="nome">
        </div>
        <div class="form-group">
          <label>Telefone</label>
          <input value="<%= contato.telefone %>" type="tel" class="form-control" name="telefone">
        </div>
        <div class="form-group">
          <label>Tipo</label>
          <select class="form-control" id="op" name="tipo">
            <option selected>Selecione</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
          </select>
        </div>
        <div class="col-lg-10"></div>
        <a type="button" class="btn btn-danger mt-2 mr-3 " href="/">Todos contatos</a>
        <button type="submit" class="btn btn-outline-primary mt-2 mr-4">Salvar</button>
      </form>


    </div>
    
    <div class="col-lg-2"></div>
  </div>
</div>




      <%- include('includes/messages') %> <% if(contatos.length > 0) { %>
      <div class="responsive-table">
        <table class="table my-3">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Nome Completo</th>
              <th scope="col">Telefone</th>
              <th scope="col">Tipo</th>
              <th scope="col"></th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <% contatos.forEach(contato => { %>
            <tr>
              <td></td>
              <td><%= contato.nome %></td>
              <td><%= contato.telefone %></td>
              <td><%= contato.tipo %></td>
              <td><a href="/ <%= contato._id %>">Editar</a></td>
              <td>
                <a class="text-danger" href="/delete/<%= contato._id %>"
                  >Excluir</a
                >
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>

        <a type="button" class="btn btn-outline-primary mt-5" href="/contato/index"
          >Novo</a
        >
      </div>
      <% } else { %>
      <p class="text-center lead">Não existem contatos na sua agenda.</p>
      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
      <a type="button" class="btn btn-outline-success mt-3 mx-auto" href="/contato/index"
        >Adicionar</a
      >
      </div>
      <% } %>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
